    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug executable 'aoc25'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--bin=aoc25"
                ]
            },
            "args": ["8"],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"]
        },
    
        {
            "name": "Debug unit tests in library 'aoc25'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test"
                ]
            }
        },
        {
            "name": "Debug unit tests in executable 'aoc25'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=aoc25"
                ]
            }
        },
        {
            "name": "Debug integration test 'day01_tests'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--test=day01_tests"
                ]
            }
        }
    ]
}